{
  "name": "@web3modal/plugin-activity",
  "version": "4.2.1",
  "type": "module",
  "main": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "!tsconfig.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/esm/core.js",
      "require": "./dist/core/cjs/core.js",
      "types": "./dist/core/types/core.d.ts"
    }
  },
  "scripts": {
    "build:clean": "rm -rf dist",
    "build": "tsc --project tsconfig.json && tsc --project tsconfig.core.json",
    "watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@web3modal/common": "4.2.1",
    "@web3modal/core": "4.2.1",
    "@web3modal/polyfills": "4.2.1",
    "@web3modal/ui": "4.2.1",
    "lit": "3.1.0",
    "valtio": "1.11.2"
  },
  "keywords": [
    "web3",
    "crypto",
    "ethereum",
    "web3modal",
    "walletconnect",
    "lit",
    "webcomponents"
  ],
  "author": "WalletConnect <walletconnect.com>",
  "license": "Apache-2.0",
  "homepage": "https://github.com/web3modal/web3modal",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web3modal/web3modal.git"
  },
  "bugs": {
    "url": "https://github.com/web3modal/web3modal/issues"
  }
}
